execute_process(
  COMMAND
    @CMAKE_COMMAND@ -E env
      OUTPUT=BrumSchtick.AppImage
      QMAKE=@TB_QMAKE_PATH@
    @TB_LINUXDEPLOY_PATH@
    --appdir=${CPACK_TEMPORARY_DIRECTORY}
    --output=appimage
    --desktop-file=@APP_RESOURCE_DIR@/linux/brumschtick.desktop
    --icon-file=@APP_RESOURCE_DIR@/graphics/images/AppIcon.png
    --icon-filename=brumschtick
    --plugin qt
  COMMAND_ERROR_IS_FATAL ANY
)
execute_process(
  COMMAND
    @CMAKE_COMMAND@ -E tar cv @CPACK_PACKAGE_FILE_NAME@.@CPACK_PACKAGE_FILE_EXT@ --format=zip BrumSchtick.AppImage
  COMMAND_ERROR_IS_FATAL ANY
)
